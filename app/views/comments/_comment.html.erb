<div class="comment" id="comment_<%= comment.id -%>">
	<a name="<%= comment.id -%>"></a>
	<div class="comment_metadata">
		<span class="subtext"><%= link_to comment.user.name, user_path(comment.user.name) %>&nbsp;<%= time_ago_in_words(comment.created_at) -%> ago
		<% if controller.controller_name == "comments" %>
			on <%= link_to comment.item.title, item_path(comment.item.id) %>
		<% end %>
		</span>
	</div>
	<%= h comment.comment %>
</div>